@using PetVet.Models
@model Usuario

@{

    ViewData["Title"] = "Cadastro";
}

<section id="cadastro-agenda">
    <div class="title">
        <h2>Cadastro de Usuário</h2>
    </div>
    <div class="form-container">
        <form asp-action="cadastroUsuario" method="POST">
            <div class="formRow">
                <label asp-for="Nome">Nome:</label>
                <input type="text" asp-for="Nome" required />
            </div>
            <div class="formRow">
                <label asp-for="DataNasc">Data de Nascimento:</label>
                <input type="date" asp-for="DataNasc" required />
            </div>
            <div class="formRow">
                <label asp-for="Endereco">Endereço:</label>
                <input type="text" asp-for="Endereco" required />
            </div>
            <div class="formRow">
                <label asp-for="Email">e-mail</label>
                <input id="txtEmail" type="email" asp-for="Email" />
            </div>
            <div class="formRow">
                <label asp-for="Telefone">Telefone:</label>
                <input type="text" asp-for="Telefone" />
            </div>
            <div class="formRow">
                <label asp-for="Login">Login:</label>
                <input id="txtLogin" type="text" asp-for="Login" required />
            </div>
            <div class="formRow">
                <label asp-for="Senha">Senha:</label>
                <input id="txtSenha" type=password asp-for="Senha" />
            </div>
            <div>
                <input type="submit" class="btn-primary" value="Cadastrar" />
            </div>
        </form>
</section>
@section Scripts{
<script src="~/js/responsive.js"></script>
<script src="~/js/validation.js"></script>
}
</section>
